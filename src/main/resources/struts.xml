<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="default" extends="struts-default" namespace="/">
		<action name="kaartSpel" class="prg.WelcomeAction">
			<result name="success">/WEB-INF/content/cardgame.jsp</result>
			<result name="error">/WEB-INF/content/err.jsp</result>
		</action>
		<action name="game" class="prg.GameTurnAction">
			<result name="success">/WEB-INF/content/cardgame.jsp</result>
			<result name="error">/WEB-INF/content/gameover.jsp</result>
		</action>
	</package>
</struts>